        @Html.ActionLink("立即报名", "Create", "Enroll", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </p>*@
</div>

@*@{
        Html.RenderAction("ContentPartial", "Articles", new { id = "mainpart" });
